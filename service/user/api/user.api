type (
	UserLoginReq {
		PhoneNum string `form:"phone_num"`
		Password string `form:"password"`
	}

	UserInfoReq {
		Id int64 `json:"id"`
	}

	UserOauthCallBack {
		Code  string `form:"code"`
		State string `form:"state"`
	}
)

type (
	UserLoginResp {
		Idtoken string `json:"id_token"`
		Expire  string `json:"expire"`
	}

	UserInfoResp {
		Code   int64  `json:"code"`
		Id     int64  `json:"id"`
		Name   string `json:"name"`
		Number string `json:"phone_number"`
	}

	UserOauthCallBackResp {
		IdToken   string `json:"id_token"`
		ExpiresIn int64  `json:"expires_in"`
		ExpiresAt int64  `json:"expires_at"`
	}
)

service user-api {
	@handler UserLogin
	get /api/user/login (UserLoginReq) returns (UserLoginResp)
	
	@handler UserOauthCallback
	get /api/user/oauth2/aliyunidaas/callback (UserOauthCallBack) returns (UserOauthCallBackResp)
}

@server (
	middleware: RoleCheck
)
service user-api {
	@handler UserHandler
	get /api/user/:id (UserInfoReq) returns (UserInfoResp)
}